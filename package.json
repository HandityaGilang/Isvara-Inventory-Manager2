{
  "name": "isvara-inventory-manager",
  "version": "1.0.0",
  "homepage": ".",
  "description": "Aplikasi desktop inventory baju dengan Electron, React, dan SQLite",
  "main": "public/electron.js",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "dist": "electron-builder",
    "package": "electron-packager . \"Isvara Inventory Manager\" --platform=win32 --arch=x64 --out=dist/ --overwrite"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.90.1",
    "lucide-react": "^0.263.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.1",
    "recharts": "^3.6.0",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.14",
    "concurrently": "^7.6.0",
    "electron": "^22.0.0",
    "electron-builder": "^24.13.3",
    "electron-packager": "^17.1.2",
    "express": "^5.2.1",
    "postcss": "^8.4.24",
    "react-scripts": "5.0.1",
    "serve": "^14.2.5",
    "tailwindcss": "^3.3.0",
    "wait-on": "^7.0.1"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.isvara.inventory",
    "productName": "Isvara Inventory Manager",
    "directories": {
      "output": "release_final"
    },
    "files": [
      "build/**/*",
      "public/**/*",
      "src-electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": "nsis",
      "sign": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
